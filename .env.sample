# OpenAlgo Configuration
OPENALGO_API_KEY=your_openalgo_api_key_here

# For local development (non-Docker):
# OPENALGO_HOST=http://127.0.0.1:5000
# OPENALGO_WS_URL=ws://127.0.0.1:8765

# For Docker: These are overridden by docker-compose.yaml environment section
# (uses http://openalgo:5000 and ws://openalgo:8765)

# Trading Configuration
PAPER_TRADING=true  # CRITICAL: Set to false only after thorough testing
TOTAL_CAPITAL=10000000  # 1 Crore
R_VALUE=6500
MAX_POSITIONS=5
MAX_LOTS_PER_POSITION=10

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Angel One Backup Feed (Optional — enables auto-failover)
ANGELONE_OPENALGO_API_KEY=your_angelone_openalgo_api_key
ANGELONE_USER_ID=your_angelone_client_code
ANGELONE_PASSWORD=your_4_digit_mpin  # MPIN only (not account password) — Angel One requires 4-digit MPIN for API login
ANGELONE_TOTP_SECRET=your_angelone_totp_secret_base32

# Automated Login (paper trading only)
AUTOMATED_LOGIN=false
OPENALGO_USERNAME=your_openalgo_username
OPENALGO_PASSWORD=your_openalgo_password
ZERODHA_USER_ID=your_zerodha_user_id
ZERODHA_PASSWORD=your_zerodha_password
ZERODHA_TOTP_SECRET=your_zerodha_totp_secret_base32

# Logging
LOG_LEVEL=INFO

# Docker-specific (for docker-compose)
EXPIRY=30JAN26
ATM=23500
