"""
Environment Configuration Template

Copy this file to .env and fill in your values:

    cp .env.example .env

Then edit .env with your actual API keys and settings.
"""

# ============================================================================
# OPENALGO CONNECTION
# ============================================================================

OPENALGO_API_KEY=your_api_key_here
OPENALGO_HOST=http://127.0.0.1:5000
OPENALGO_WS_URL=ws://127.0.0.1:8765


# ============================================================================
# TRADING MODE
# ============================================================================

# Paper Trading (OpenAlgo Analyzer Mode - Virtual ₹1 Cr capital)
# Set to 'false' for LIVE trading with real money
PAPER_TRADING=true

# Dry Run (logs orders but doesn't place them)
# Useful for debugging without placing ANY orders
DRY_RUN=false


# ============================================================================
# TELEGRAM NOTIFICATIONS (Optional)
# ============================================================================

# Enable Telegram notifications
TELEGRAM_ENABLED=false

# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get your chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_telegram_chat_id_here


# ============================================================================
# ANGEL ONE BACKUP FEED (Optional — enables auto-failover)
# ============================================================================

ANGELONE_OPENALGO_API_KEY=your_angelone_openalgo_api_key
ANGELONE_HOST=http://127.0.0.1:5001
ANGELONE_WS_URL=ws://127.0.0.1:8766
ANGELONE_USER_ID=your_angelone_client_code
ANGELONE_PASSWORD=your_4_digit_mpin  # MPIN only (Angel One requires 4-digit MPIN, not account password)
ANGELONE_TOTP_SECRET=your_angelone_totp_secret_base32


# ============================================================================
# AUTOMATED LOGIN (paper trading only)
# ============================================================================

AUTOMATED_LOGIN=false
OPENALGO_USERNAME=your_openalgo_username
OPENALGO_PASSWORD=your_openalgo_password
ZERODHA_USER_ID=your_zerodha_user_id
ZERODHA_PASSWORD=your_zerodha_password
ZERODHA_TOTP_SECRET=your_zerodha_totp_secret_base32


# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

# Verbose logging (more detailed logs)
VERBOSE=false
